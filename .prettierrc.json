{
    "arrowParens": "avoid",
    "endOfLine": "crlf",
    "overrides": [
        {
            "files": "*.pug",
            "options": {
                "attributeSeparator": "always",
                "parser": "pug",
                "singleQuote": false
            }
        }
    ],
    "printWidth": 100,
    "proseWrap": "preserve",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "es5"
}
