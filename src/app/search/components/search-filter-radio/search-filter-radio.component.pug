.card.filter([attr.aria-labelledby]="labelId")
    fieldset.card-body
        legend 
            h3.card-title.filter-title([id]="labelId") {{ filter.label | translate }}
        mat-radio-group.filters-radio-group([(ngModel)]="filter.selected")
            mat-radio-button(*ngFor="let item of filter.items", [value]="item.key", (change)="change($event)") {{ item.label | translate }}
