div.licenses
  div.modal-header
    h4.modal-title {{'units.tab-unit-share.licenses_info' | translate}}
    button.close(type="button", aria-label="Close", (click)="closeModal()")
        span(aria-hidden="true") &times;
  div.modal-body
    ngb-accordion(#acc="ngbAccordion")
      ngb-panel(title="{{'units.licenses.private.label' | translate}}")
        ng-template(ngbPanelContent) {{'units.licenses_info_modal.private_text' | translate}}
      ngb-panel(title="{{'units.licenses.readonly.label' | translate}}")
        ng-template(ngbPanelContent) {{'units.licenses_info_modal.read_only_text' | translate}}
      ngb-panel(title="{{'units.licenses.reuse.label' | translate}}")
        ng-template(ngbPanelContent) {{'units.licenses_info_modal.reuse_text' | translate}}