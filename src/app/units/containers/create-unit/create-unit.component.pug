main(id="main", tabindex="-1")
    .row
        .col
            .d-flex.justify-content-between.flex-wrap.flex-md-nowrap.align-items-center.pb-2
                h1.section-title(translate, id="title", tabindex="-1") units.create_unit.title

    .row.mt-2
        .col
            .card
                form([formGroup]="createUnit", (ngSubmit)="create()", style="text-align: left", ngNativeValidate)
                    .card-body
                        h2.sub-title {{ 'units.create_unit.basic_information' | translate }}
                        p {{ "common.asterisk_required" | translate}}
                        .form-group
                            io-input([data]="unitNameInput")
                        .form-row
                            .form-group.col-md-12.col-lg-6
                                io-select(
                                    [data]="selectTypeInput",
                                    [optionWrapper]="typeOptionWrapper"
                                )
                            .form-group.col-md-12.col-lg-6
                                io-select(
                                    [data]="selectLanguageInput",
                                    [optionWrapper]="languageOptionWrapper"
                                )
                        .form-group
                            io-select(
                                [data]="selectThemeInput",
                                [optionWrapper]="themeOptionWrapper",
                                [translateOption]="false"
                            )
                            button.mt-2.btn.btn-secondary.btn-sm(
                                type="button",
                                (click)="showThemeInfo()"
                            ) {{ 'units.themes.show-themes-modal-info' | translate }}
                        .form-group
                            io-input-category([data]="selectCategoryInput")
                        .form-group
                            io-input-range([data]="ageRangeInput")
                        .form-group
                            io-educational-context-input([data]="educationalContextInput")
                        .form-group
                            io-textarea([data]="shortDescriptionInput", rows="3")
                        .form-group
                            io-input([data]="coverInput")
                            img.img-unit.img-thumbnail(
                                [src]="formControls.cover.value",
                                *ngIf="formControls.cover.valid"
                            )
                        h2.sub-title {{ 'units.create_unit.optional_information' | translate }}
                        .form-group
                            io-textarea([data]="longDescriptionInput", rows="5")
                        .form-group
                            io-input-tags([data]="tagsInput")
                    .card-footer(style="text-align: right")
                        button.btn.btn-success(type="submit", [disabled]="!allowSubmit")
                            io-button-loader([show]="!allowSubmit")
                            | {{ 'units.create_unit.submit' | translate }}
